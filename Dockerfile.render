# Use the official n8n Docker image as base
FROM n8nio/n8n:latest

# Set environment variables
ENV N8N_HOST=0.0.0.0
ENV N8N_PORT=8080
ENV N8N_PROTOCOL=https
ENV NODE_ENV=production
ENV WEBHOOK_URL=https://${RENDER_SERVICE_NAME}.onrender.com
ENV N8N_EDITOR_BASE_URL=https://${RENDER_SERVICE_NAME}.onrender.com

# Expose port 8080
EXPOSE 8080

# Start n8n
CMD ["n8n", "start"]
